<Window x:Class="MarkDownBookLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkDownBookLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="開く">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btFirefox" Height="30" Width="100" Command="{Binding OpenFirefoxCommand}" Margin="20,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">Firefox</Button>
                    <Button Name="btVSCode" Height="30" Width="100" Command="{Binding OpenVisualStudioCodeCommand}" Margin="140,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">visual studio code</Button>
                    <TextBox Name="tbOpenOpenFile" HorizontalAlignment="Left" Margin="95,59,0,0" TextWrapping="Wrap" Text="{Binding Path=OpenFile}" VerticalAlignment="Top" Width="577"/>
                    <Label Content="開くファイル：" HorizontalAlignment="Left" Margin="20,55,0,0" VerticalAlignment="Top"/>
                    <Button Name="btOpenSelectProj" Content="..." Command="{Binding CommandOpen}" HorizontalAlignment="Left" Margin="689,58,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="新規">
                <Grid Background="#FFE5E5E5">
                    <TextBox Name="tbProjName" HorizontalAlignment="Left" Margin="150,46,0,0" TextWrapping="Wrap" Text="{Binding Path=ProjName}" VerticalAlignment="Top" Width="120"/>
                    <Label Content="作成するプロジェクト名称：" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                    <Label Content="コンテンツ作成相対パス：" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="tbRelPath" HorizontalAlignment="Left" Margin="143,71,0,0" TextWrapping="Wrap" Text="{Binding Path=ProjRelPath}"  VerticalAlignment="Top" Width="120"/>
                    <Button Name="btRevert" Content="推奨パスに戻す" HorizontalAlignment="Left" Margin="268,71,0,0" VerticalAlignment="Top" Command="{Binding Path=CommandRevert}"/>
                    <Button Name="btCreate" Content="作成" HorizontalAlignment="Left" Margin="18,98,0,0" VerticalAlignment="Top" Command="{Binding Path=CommandCreate}"/>
                    <Label Content="作成するパス：" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.537,0.234"/>
                    <TextBox Name="tbCreatePath" HorizontalAlignment="Left" Margin="99,14,0,0" TextWrapping="Wrap" Text="{Binding Path=CreatePath}" VerticalAlignment="Top" Width="534"/>
                    <Button Name="btCreateSelectDir" Content="..." Command="{Binding Path=CommandSelectDir}" HorizontalAlignment="Left" Margin="638,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.678,1.156"/>
                </Grid>
            </TabItem>
            <TabItem Header="移動">
                <Grid Background="#FFE5E5E5">
                    <Label Content="移動元" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="移動先" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Margin="61,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="568"/>
                    <TextBox HorizontalAlignment="Left" Margin="61,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="568"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
